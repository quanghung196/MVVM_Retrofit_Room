<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_dialog_progress"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_margin="@dimen/progress_dialog_margin">

        <com.github.ybq.android.spinkit.SpinKitView
            android:id="@+id/spin_kit"
            android:layout_margin="@dimen/progress_dialog_margin"
            style="@style/SpinKitView.Circle"
            android:layout_width="@dimen/progress_dialog_spin"
            android:layout_height="@dimen/progress_dialog_spin"
            app:SpinKit_Color="@color/blueAtoll" />

        <TextView
            android:layout_gravity="center_vertical"
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/progress_dialog_title_margin"
            android:fontFamily="@font/vag_rounded"
            android:text="@string/progress_dialog_title"
            android:textColor="@color/black"
            android:textSize="@dimen/progress_dialog_title_size" />
    </LinearLayout>

</layout>
