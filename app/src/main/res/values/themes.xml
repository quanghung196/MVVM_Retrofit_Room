<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyApplication" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blueAtoll</item>
        <item name="colorPrimaryVariant">@color/blueAtoll</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ItemNormalText" parent="android:Widget.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:maxLines">1</item>
        <item name="android:fontFamily">@font/vag_rounded</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">@dimen/user_card_normal_text</item>
        <item name="android:layout_marginTop">@dimen/user_card_text_margin_top</item>
    </style>

    <style name="LabelNormalText" parent="android:Widget.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/vag_rounded</item>
        <item name="android:textSize">@dimen/label_normal_text</item>
        <item name="android:layout_marginRight">@dimen/label_margin_right</item>
    </style>

    <style name="ItemBoldText" parent="android:Widget.TextView">
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/vag_rounded</item>
        <item name="android:textSize">@dimen/user_card_bold_text</item>
        <item name="android:layout_marginTop">@dimen/user_card_text_margin_top</item>
    </style>

    <style name="ExecuteInformation">
        <item name="android:layout_marginRight">@dimen/view_group_to_parent</item>
        <item name="android:layout_marginLeft">@dimen/view_group_to_parent</item>
        <item name="android:layout_marginTop">@dimen/view_group_to_view_group</item>
        <item name="android:layout_marginBottom">@dimen/view_group_to_view_group</item>
    </style>

    <style name="UserEditTextInformation" >
        <item name="android:fontFamily">@font/vag_rounded</item>
        <item name="android:background">@null</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ExecuteButton">
        <item name="android:layout_marginRight">@dimen/view_to_view</item>
        <item name="android:layout_marginLeft">@dimen/view_to_view</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/vag_rounded</item>
    </style>

    <style name="FancyToolBar" parent="android:Theme.Holo">
        <item name="android:fontFamily">@font/vag_rounded</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_back</item>
    </style>
</resources>